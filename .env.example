# ==== PORTY WYSTAWIONE NA HOSTA ====
# na tym porcie backend będzie widoczny na hoście
BACKEND_PORT=3000
# tu będzie dostępny frontend (http://localhost:8080)
FRONTEND_PORT=8080

# ==== BACKEND CONFIG ====
# przykładowy Postgres w docker-compose:
DATABASE_URL=postgres://app_user:app_password@db:5432/app_db
JWT_SECRET=super-tajny-sekret

# ==== FRONTEND CONFIG (build-time) ====
# URL, pod który frontend wywołuje backend z PERSPEKTYWY PRZEGLĄDARKI
# (czyli zwykle localhost:BACKEND_PORT)
VITE_API_URL=http://localhost:3000

# ==== BAZA DANYCH (jeśli używasz lokalnej w compose) ====
POSTGRES_USER=app_user
POSTGRES_PASSWORD=app_password
POSTGRES_DB=app_db
