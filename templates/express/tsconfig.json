{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "nodenext",

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false,
    "strict": true,
    "types": ["node"],

    "baseUrl": "../backend",
    "paths": { "@/*": ["src/*"] }
  },
  "compileOnSave": true,
  "include": ["src"]
}
