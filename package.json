{
  "name": "@kreciko/setup-templates",
  "version": "0.1.2",
  "description": "Installer that adds project template files into an existing repo",
  "type": "module",
  "bin": {
    "setup-templates": "bin/setup-templates.mjs"
  },
  "files": [
    "bin",
    "templates",
    "src"
  ],
  "scripts": {
    "release:patch": "npm version patch && git push --follow-tags",
    "release:minor": "npm version minor && git push --follow-tags",
    "release:major": "npm version major && git push --follow-tags"
  },
  "engines": {
    "node": ">=24"
  },
  "keywords": [
    "cli",
    "npx",
    "templates",
    "scaffold",
    "boilerplate",
    "typescript",
    "docker"
  ],
  "author": {
    "name": "kreciko",
    "email": "kretostan@portfolio.com"
  },
  "homepage": "https://github.com/Kretostan/setup-templates",
  "repository": "github:Kretostan/setup-templates",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.6.2",
    "ora": "^9.1.0",
    "prompts": "^2.4.2"
  }
}
